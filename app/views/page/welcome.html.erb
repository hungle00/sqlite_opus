<!-- Hero Section -->
<section class="hero-section py-5 py-md-5 py-lg-5">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-50">
      <div class="col-lg-8 text-center">
        <h1 class="display-2 fw-bold text-primary mb-4">
          SQLite Opus
        </h1>
        <p class="lead text-body-secondary mb-4">
          <span class="fw-semibold">Opus</span> is a Latin term that means Works.
          <span class="fw-semibold">Rails Opus</span> stands for a collection of works with Rails.
        </p>
        <p class="text-body-secondary mb-5">
          Manage and explore your SQLite databases with an intuitive dashboard interface.
        </p>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
          <%= link_to "Open SQLite Dashboard", "/sqlite_dashboard", class: "btn btn-primary btn-lg px-5 py-3 fw-semibold" %>
        </div>
      </div>
    </div>
  </div>
</section>

